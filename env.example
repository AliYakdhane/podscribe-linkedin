# Copy this to .env and fill your keys
OPENAI_API_KEY=

# Supabase Configuration (for permanent storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
# Alternative: SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_TABLE_TRANSCRIPTS=podcast_transcripts
SUPABASE_TABLE_POSTS=podcast_posts

# Optional: Explicit Apple Podcasts episode URL to start from
APPLE_EPISODE_URL=https://podcasts.apple.com/us/podcast/the-ai-daily-brief-formerly-the-ai-breakdown/id1680633614?i=1000725373217
# Optional: explicit show id (overrides parsing from URL)
SHOW_ID=1680633614
# Daily local hour (0-23) to run scheduled task
SCHEDULE_HOUR=8
# Output directories (relative to project root)
DATA_DIR=data
TRANSCRIPTS_DIR=data/transcripts
POSTS_DIR=data/posts
